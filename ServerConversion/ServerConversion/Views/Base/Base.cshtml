@model string
@{
    ViewBag.Title = "Base";
}

<link href="https://fonts.googleapis.com/css?family=Montserrat|Nunito+Sans" rel="stylesheet" />
<div class="topnav">
    <a href="index.html">Feet to Meters</a>
    <a href="C to F.html">Celsius to Fahrenheit</a>
    <a href="feetInches.html">Feet to Inches</a>

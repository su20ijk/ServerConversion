@model double
@{
    ViewBag.Title = "FeeetToMiles";
}

<div class="page-header darkBlue">
    Feet to Miles
</div>
<br />
<form action="Converter" method="post">
    <br />
    <div class="container">
        <div class="row">
            <div class="offset-3 col-2 bgBlue shadow-lg p-3 mb-5 rounded">
                <div class="row">
                    <div class="col-6">
                        <p>Feet: <div><input name="Feet" class="input-group lineBoarder" type="number" step="0.01" /></div></p>
                    </div>
                </div><div class="row">
                    <div class="col-6">
                        <p>Miles: <div class="output lineBoarder">@Model</div></p>
                    </div>
                </div>
            </div>
        </div>
        </div>
</form>

